@m@using myEvernoteWebApp.viewModel
@model infoViewModel
@{
    ViewBag.Title = Model.title;
}

<link href="~/Content/login-register.css" rel="stylesheet" />
<section class="login-info">
    <div class="container">
        <div class="row main">
            <div class="form-header">
                <h1 class="text-center">@Model.header</h1>
            </div>
            <div class="main-content">
                <div class="text-info">
                    <h2><span class="glyphicon glyphicon-info-sign"></span>&nbsp;&nbsp;&nbsp;@Model.title</h2>
                    <hr />
                    <p class="text-justify">
                        @foreach (string msg in Model.items)
                        {
                            @msg<br>
                        }
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>
@{
    string js = string.Empty;

    if (Model.isRedirecting)
    {
        js = "setTimeout(function () { window.location = '" + Model.redirectingUrl + "'; }, " +
            Model.redirectingTimeOut + ");";
    }
}
<script>

    $(function () {
        @Html.Raw(js);
    });

</script>


