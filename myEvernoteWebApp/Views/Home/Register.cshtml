@using MyEvernoteEntities.valueObjects
@model  registerViewModel



@{
    /**/

    ViewBag.Title = "My Evernote Kayıt Sayfası ";
}


<link href="~/Content/login-register.css" rel="stylesheet" />




@using (Html.BeginForm())
{

    <section class="login-info">
        <div class="container">
            <div class="row main">
                <div class="form-header">
                    <h1 class="text-center ">Kayıt Formu </h1>
                </div>

                <div class="main-content">

                    @Html.ValidationSummary(false)




                    <div class="input-group ">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-user" aria-hidden="true"></span></span>
                        @Html.TextBoxFor(model => model.userName, new
                        {
                            @class = "form-control",
                            placeholder = "Kullanıcı Adınız"
                        })
                    </div>
                    <div class="input-group ">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-envelope" aria-hidden="true"></span></span>
                        @Html.TextBoxFor(model => model.eMail, new
                        {
                            @class = "form-control",
                            placeholder = "E-Posta Adresiniz"
                        })
                    </div>
                    <div class="input-group">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-lock" aria-hidden="true"></span></span>

                        @Html.TextBoxFor(model => model.password, new
                        {
                            @class = "form-control",
                            placeholder = "Şifreniz",
                            type = "password"
                        })
                    </div>
                    <div class="input-group ">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-lock" aria-hidden="true"></span></span>
                        @Html.TextBoxFor(model => model.rePassword, new
                        {
                            @class = "form-control",
                            placeholder = "Şifre(Tekrar)",
                            type = "password"
                        })
                    </div>



                    <div class="form-group ">
                        <button type="submit" class="btn btn-danger btn-lg btn-block login-button">Kayıt Ol</button>
                    </div>


                </div>
            </div>
        </div>
    </section>



}



<script>

   (function () {
        $("footer").parent.hide();

    });
</script>



